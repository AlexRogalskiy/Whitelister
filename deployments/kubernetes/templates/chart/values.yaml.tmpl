# Generated from deployments/kubernetes/templates/chart/values.yaml.tmpl

kubernetes:
  host: https://kubernetes.default

whitelister:
  labels:
    provider: stakater
    group: com.stakater.platform
    version: {{ getenv "VERSION" }}
  image:
    name: {{ getenv "DOCKER_IMAGE" }}
    tag: "{{ getenv "VERSION" }}"
    pullPolicy: IfNotPresent
  syncInterval: 10s
  removeUnknownIp: true
  filter:
    labelName: whitelister
    labelValue: true
  ipProviders:
  - name: kubernetes
    params:
      FromPort: 0
      ToPort: 65535
      IpProtocol: tcp
  provider:
    name: aws
    params:
      RoleArn: <aws-iam-role-arn>
      region: <aws-region>
  configFilePath: /configs/config.yaml